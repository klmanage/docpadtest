<!--nested template inside the 'pages' layout.-->
<!--'pages' layout provides a left nav for -->

---
title: Articles
layout: page
isPage: true
---

<nav class="linklist">
	<% for document in @getCollection('articles').toJSON(): %>
		<li>
			<span><%= document.date.toDateString() %></span>&raquo;
			<a href="<%= document.url %>"><%= document.title %></a>
		</li>
	<% end %>
</nav>